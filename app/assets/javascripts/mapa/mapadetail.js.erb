        styleId:999
    });

var googleRoadMap = new L.Google('ROADMAP');
var googleHybrid = new L.Google('HYBRID');

var limite = new L.TileLayer.WMS("http://geo.epdvr.com.br/geoserver/wms", {
            layers: 'nebulosa:limite_municipal',
            format: 'image/png',
            transparent: true
        });

// create a map in the "map" div, set the view to a given place and zoom
var map = L.map('map', {maxZoom: 25, minZoom: 13,layers: [limite, googleHybrid]}).setView([-22.511447, -44.108906], 13);

function zoomToFeature(e) {
    map.fitBounds(e.target.getBounds());
}

function style(feature) {
    return {
        fillColor: '#FF0000',
        weight: 2,
        opacity: 1,
        color: 'white',
        dashArray: '3',
        fillOpacity: 0.3
    };
}

var lotes = new L.GeoJSON(null, {style: style});

function lotesJson(data) {
    lotes.addData(data);
    map.fitBounds(lotes.getBounds());
}


  lotes.clearLayers();
