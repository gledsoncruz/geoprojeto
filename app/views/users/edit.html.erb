<h3>Alterar Usuário</h3>

<%= simple_form_for(@user, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :autocomplete => "off", :hint => "Deixe em branco caso não queira alterar", :required => false  %>
    <%= f.input :password_confirmation, :required => true %>
    <% if current_user.role == "admin" %>
    	<%= f.input :role, :collection => User::ROLES %>
    	<%= f.input :active %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar", :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar', users_path, :class => 'btn btn-danger' %>
  </div>
<% end %>