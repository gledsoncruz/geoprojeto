
<div style="position: relative;">
<h3><%= @fazenda.proprietario %></h3>
<input type="hidden" id="insc_detail" value="<%= @fazenda.insc_base %>" />
<table class="table table-bordered table-hover table-condensed">
  <tbody>
      <tr>
        <td><b>Inscrição Base:</b></td>
        <td><%= @fazenda.insc_base %></td>
        <td rowspan="14" style="width:60%"><div id="map" style="height: 400px"></div></td>
      </tr>
      <tr>
        <td><b>Inscrição:</b></td>
        <td><%= @fazenda.inscricao %></td>
      </tr>
      <tr>
        <td><b>Responsável:</b></td>
        <td><%= @fazenda.responsavel %></td>
      </tr>
      <tr>
        <td><b>Tipo Imóvel:</b></td>
        <td><%= @fazenda.tipoimovel %></td>
      </tr>
      <tr>
        <td><b>Padrão:</b></td>
        <td><%= @fazenda.padrao %></td>
      </tr>
       <tr>
        <td><b>Tipo Obra:</b></td>
        <td><%= @fazenda.tipoobra %></td>
      </tr>
      <tr>
        <td><b>CPF/CGC:</b></td>
        <td><%= @fazenda.cpfcgc %></td>
      </tr>
      <tr>
        <td><b>Endereço:</b></td>
        <td><%= @fazenda.localizimovel %>, <%= @fazenda.numero%></td>
      </tr>
      <tr>
        <td><b>Complemento:</b></td>
        <td><%= @fazenda.compl %></td>
      </tr>
      <tr>
        <td><b>Bairro:</b></td>
        <td><%= @fazenda.bairro %></td>
      </tr>
      <tr>
        <td><b>Loteamento:</b></td>
        <td><%= @fazenda.loteamento %></td>
      </tr>
      <tr>
        <td><b>CEP:</b></td>
        <td><%= @fazenda.cep %></td>
      </tr>
      <tr>
        <td><b>Área do Lote:</b></td>
        <td><%= @fazenda.areadolote %></td>
      </tr>
      <tr>
        <td><b>Área construída:</b></td>
        <td><%= @fazenda.areaconstruida %></td>
      </tr>

  </tbody>
</table>

<table class="table table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Zoneamento</th>
    <th>Atividade</th>
  </tr>
  </thead>
  <tbody>
    <% @zoneamentos.each do |zona| %>
      <tr>
        <td><%= zona.sigla %></td>
        <td><%= zona.atividade %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'Voltar', :back, :class => 'btn btn-primary' %>
<%= link_to 'Gerar PDF', mapas_detail_path(@fazenda.id, :format => "pdf"), :target => "_blank",:class => 'btn btn-primary' %>
</div>
<script src="http://maps.google.com/maps/api/js?v=3.2&sensor=false"></script>
<%= javascript_include_tag "application", "mapa/mapadetail" %>

