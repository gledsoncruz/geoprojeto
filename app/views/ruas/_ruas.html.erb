
<table class="table table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Id</th>
    <th>Nome</th>

    <th colspan=3 style="text-align: center;">Ações</th>
  </tr>
  </thead>
  <tbody>
    <% if @ruas.empty? %>
      <tr>
        <td colspan=3>Não exitem registros com o valor informado</td>
      </tr>

    <% end %>
    <% @ruas.each do |rua| %>
      <tr>
        <td><%= rua.id %></td>
        <td><%= rua.nome %></td>

        <td style="text-align: center;"><%= link_to '', rua, :class => 'icon-search', :title => 'Visualizar' %></td>
        <% if can? :update, rua %>
          <td style="text-align: center;"><%= link_to '', edit_rua_path(rua), :class => 'icon-pencil', :title => 'Editar' %></td>
            <% if can? :delete, Rua %>
            <td style="text-align: center;"><%= link_to '', rua, :class => 'icon-trash', :method => :delete, :data => { :confirm => 'Are you sure?' }, :title => 'Apagar' %></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
