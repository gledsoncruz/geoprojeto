<h3>Lista de Ruas</h3>

<% if can? :update, Rua %>
<%= form_tag ruas_path, :method => 'get', :class => 'form-search', :id => 'ruas_search' do %>
  <%= text_field_tag :search, params[:search], :class => 'input-medium search-query' %>
    <%= submit_tag "Consultar", :nome => nil, :class => 'btn btn-primary' %>
<% end %>
<% end %>

<div id="ruas">
  <%= render 'ruas' %>
</div>

