<div id="saude">
  <table class="table table-bordered table-hover table-condensed">
    <col width="5%">
    <col width="35%">
  <thead>
  <tr>
    <th>Id</th>
    <th>Descricao</th>
    <th>Tel/Ramal</th>
    <th>Tipo</th>
    <th>Responsavel</th>
  </tr>
  </thead>
  <tbody>
  	<% if @saudes.empty? %>
      <tr>
        <td colspan=5>NÃ£o exitem registros com o valor informado</td>
      </tr>
    <% end %>
    <% @saudes.each do |s| %>
      <tr>
        <td><%= s.id %></td>
        <td><%= s.descricao %></td>
        <td><%= s.tel_ramal %></td>
        <td><%= s.tipo %></td>
        <td><%= s.responsave %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% unless @saudes.empty? %>
<%= will_paginate @saudes, :renderer => BootstrapPagination::Rails, :class => 'pagination pagination-centered' %>
<% end %>
</div>
