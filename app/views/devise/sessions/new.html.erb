<div style="padding-top: 30px; padding-left: 57%;">
<div class="form-signin">
	<%= bootstrap_flash %>
<h2 class="form-signin-heading">Acesso</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


    <%= f.input :email, :required => false, :autofocus => true, :class => 'input-block-level', :placeholder => "Email" %>
    <%= f.input :password, :required => false, :class => 'input-block-level', :placeholder => "Senha de acesso" %>

    <%= f.button :submit, "Acessar", :class => "btn btn-primary" %>

<% end %>

<%= render "devise/shared/links" %>
</div>
<center>
<%=link_to(image_tag("logo-epd.bmp",:size => "109x10")) %>
</center>

</div>