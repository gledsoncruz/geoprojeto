
<h2>Alterar Dados Perfil</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :password, :autocomplete => "off", :hint => "Deixe em branco caso não queira alterar", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "Precisamos de sua senha atual para confirmar as alterações", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Alterar", :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar', root_path, :class => 'btn btn-danger' %>
  </div>
<% end %>